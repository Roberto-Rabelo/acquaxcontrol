                <a href="#" class="nav-link">
                    <i class="nav-icon fas fa-bolt"></i>
                    <p>
                        Energia
                    </p>
                </a>
            </li>
            <li class="nav-item ">
                <a href="#" class="nav-link">
                    <i class="nav-icon fas fa-fire"></i>
                    <p>
                        Gás
                    </p>
                </a>
            </li>*@

                    @*<li class="nav-item ">
                <a href="#" class="nav-link" >
                    <i class="nav-icon fas fa-lock"></i>
                    <p>
                        Privacy
                    </p>
                </a>
            </li>*@
                }
                else
                {

                }
            </ul>
        </nav>
    </div>
    <style>
        .fixar {
            border-top: 0px solid #333;
            bottom: 0;
            left: 0;
            height: 40px;
            position: initial;
            width: 100%;
        }
    </style>
    <a href="~/Home" class="brand-link border-bottom-0 fixar">
        <span class=" font-weight-light"></span>
        <img src="~/img/acquaXcontrol.png" alt="AcquaX" class="brand-image" />

    </a>
    
</aside>