@model IEnumerable<AdminLTE.MVC.Models.OrdemservicoVistoria>

@{
    ViewData["Title"] = "Index";
    var NumVistoriaAltoConsumo = ViewBag.NumVistoriaAltoConsumo;
    var NumVistoriaGeral = ViewBag.NumVistoriaGeral;
    var NumVistoriaGeralFeito = ViewBag.NumVistoriaGeralFeito;
    var NumVistoriaAltoConsumoFeito = ViewBag.NumVistoriaAltoConsumoFeito;
    var totalVistoriaFeita = NumVistoriaAltoConsumoFeito + NumVistoriaGeralFeito;
}

<h1>Módulo - Engenharia </h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class=" col-md-12 justify-content-center register-logo">
        <a href="~/Home">
            <img src="~/img/acquaXcontrol.png" style="width:350px;" />
        </a>
    </div>
</div>

<div class="p-4 p-md-5 mb-4 text-white rounded bg-info">
    <div class="col-md-12 justify-content-center px-0">
        <h1 class="display-4 font-italic">Acquax - Engenharia</h1>


    </div>
</div>



<div class="row">
    <div class="col-md-3 col-sm-6 col-12">
        <a asp-controller="OrdemservicoVistorias" asp-action="SelectOrdemServico" class="small-box-footer" style="color:#212529">
            <div class="info-box">
                <span class="info-box-icon bg-warning"> <i class="fas fa-align-justify"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Criar vistoria </span>
                    <span class="info-box-number"></span>
                </div>
            </div>
        </a>
        <!-- /.info-box-content -->
        <!-- /.info-box -->
    </div>

    <div class="col-md-3 col-sm-6 col-12">
        <a asp-controller="OrdemservicoVistorias" asp-action="ListAltoConsumo" class="small-box-footer" style="color:#212529">
            <div class="info-box">
                <span class="info-box-icon bg-warning"><i class="fas fa-users-cog"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Alto consumo a fazer</span>
                    <span class="info-box-number">@NumVistoriaAltoConsumo</span>
                </div>
                <!-- /.info-box-content -->
            </div>
        </a>
        <!-- /.info-box -->
    </div>
    <div class="col-md-3 col-sm-6 col-12">
        <a asp-controller="OrdemservicoVistorias" asp-action="ListVistoriaGeral" class="small-box-footer" style="color:#212529">
            <div class="info-box">
                <span class="info-box-icon bg-warning"><i class="fas fa-user-edit"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Vistoria Geral a fazer</span>
                    <span class="info-box-number">@NumVistoriaGeral</span>
                </div>
                <!-- /.info-box-content -->
            </div>
        </a>
        <!-- /.info-box -->
    </div>
    <div class="col-md-3 col-sm-6 col-12">
        <a asp-controller="OrdemservicoVistorias" asp-action="ListVistoriaFeitas" class="small-box-footer" style="color:#212529">
            <div class="info-box">
                <span class="info-box-icon bg-success"><i class="fas fa-check-square"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Vistorias Feitas</span>
                    <span class="info-box-number">@totalVistoriaFeita </span>
                </div>
                <!-- /.info-box-content -->
            </div>
        </a>
        <!-- /.info-box -->
    </div>



</div>
