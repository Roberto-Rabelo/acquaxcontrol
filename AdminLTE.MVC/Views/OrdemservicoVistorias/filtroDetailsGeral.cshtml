@model AdminLTE.MVC.Models.OrdemVistoriaGeral

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/VistoriaAltoconsumo.css">
<script>
        function cont() {
            window.print();
    }
</script>


<style>
    .contentDetalhes {
        margin-left: 150px !important;
    }
</style>
<div class="row">
    <div class=" col-md-12 justify-content-center register-logo">
        <a href="~/Home">
            <img src="~/img/acquaXcontrol.png" style="width:350px;" />
        </a>
    </div>
</div>
<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header ">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Detalhes da Vistoria</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Detalhes da Vistoria</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">



                    <!-- Main content -->
                    <div class="invoice p-3 mb-3">
                        <!-- title row -->
                        <div class="row">
                            <div class="col-12">
                                <h4>
                                    <i class="fas fa-stopwatch" style="color:#5CBEEA"></i> ACQUAX DO BRASIL - VISTORIA
                                    @*<small class="float-right">Date: 2/10/2014</small>*@
                                </h4>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- info row -->
                        <div class="row invoice-info">
                            <div class="col-sm-4 invoice-col">
                                Local
                                <address>
                                    <strong>Condominio</strong><br>
                                    @Html.DisplayFor(model => model.Condominio.Nome)<br>
                                    @Html.DisplayFor(model => model.Condominio.Endereco)\ @Html.DisplayFor(model => model.Condominio.Numero)<br>
                                    @Html.DisplayFor(model => model.Condominio.Bairro)<br>
                                    @Html.DisplayFor(model => model.Condominio.Estado)
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                Vistoria no
                                <address>
                                    <strong>Apartamento</strong><br>
                                    Unidade: @Html.DisplayFor(model => model.unidade)<br>
                                    Bloco:  @Html.DisplayFor(model => model.bloco)<br>
                                    Cliente:  @Html.DisplayFor(model => model.emailCliente)<br>
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                <b> Responsável Técnico: </b> @Html.DisplayFor(model => model.IdAspNetUsers)<br>
                                <b>Solicitação: </b>@Html.DisplayFor(model => model.dt_solicitacao) <br>
                                <b>Execução: </b>@Html.DisplayFor(model => model.dt_execucao) <br>
                                <b>Tipo: </b>@Html.DisplayFor(model => model.tipoVistoria) <br>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <!-- Table row -->
                        <div class="row">
                            <div class="col-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Serviço</th>
                                            <th></th>

                                            <th>Resultado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td> @Html.DisplayNameFor(model => model.conclusao)</td>
                                            <td></td>

                                            <td>@Html.DisplayFor(model => model.conclusao)</td>
                                        </tr>


                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <h2 style="text-align:center">Fotos Vistoria</h2>
                        <hr class="my-4">
                        <div class="row">
                            <!-- accepted payments column -->
                            <div class="col-lg-6 col-md-6" style="width: 350px;">
                                @if (@Html.DisplayFor(model => model.FotoPath01) == null)
                                {

                                }
                                else
                                {
                                    <img class="rounded imgvistoria" src="@Html.DisplayFor(model => model.FotoPath01)" />
                                }

                            </div>


                            <!-- /.col -->
                            <!-- /.col -->
                        </div>

                        <hr class="my-4">
                        <div class="row">
                            <!-- accepted payments column -->
                            <div class="col-lg-6 col-12">
                                <b>Observações sobre a vistoria</b>

                                <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                                    @Html.DisplayFor(model => model.observacao)
                                </p>
                            </div>
                            <!-- /.col -->
                            <div class="col-lg-6 col-12">
                                <b>@Html.DisplayNameFor(model => model.assinaturaCliente)</b>

                                <div class="table-responsive">
                                    <img style=" border: 1px solid #333; margin-bottom: 5px;" src="@Html.DisplayFor(model => model.assinaturaCliente)" />
                                </div>
                                <p><b>@Html.DisplayNameFor(model => model.nomeCliente): </b>@Html.DisplayFor(model => model.nomeCliente)</p>
                                <p><b>CPF\RG do Cliente: </b>@Html.DisplayFor(model => model.documento)</p>
                            </div>
                            <!-- /.col -->
                        </div>
                        <hr class="my-4">
                        <div class="row">
                            <div class="col-sm-4">
                                <b>Forma de pagamento:  </b> @Html.DisplayFor(model => model.formaPagamento)<br>
                                <b>Valor: </b>@Html.DisplayFor(model => model.valor) <br>
                                <b>Pago: </b>@Html.DisplayFor(model => model.pago) <br>

                            </div>
                        </div>
                        <hr class="my-4">
                        <div class="row ">
                            <p>
                                <b>
                                    Obs: informamos que a responsabilidade pela manutenção, preservação e troca do medidor, são de
                                    responsabilidade do proprietário da unidade e não da administração do condomínio, por se tratar de um item de
                                    propriedade exclusiva da unidade
                                </b>
                            </p>
                        </div>
                        <div class="row justify-content-center">
                            <p class="rodapeVistoria">

                                Telefone: 4003-5214

                            </p>
                        </div>
                        <div class="row justify-content-center">
                            <p class="rodapeVistoria">Email: comercial@acquaxdobrasil.com.br\www.acquaxdobrasil.com.br</p>
                        </div>
                        <!-- /.row -->
                        <!-- this row will not appear when printing -->
                        <div class="row no-print">
                            <div class="col-12">
                                @*<a href="invoice-print.html" rel="noopener" target="_blank" class="btn btn-default"><i class="fas fa-print"></i> Print</a>
                <button type="button" class="btn btn-success float-right">
                    <i class="far fa-credit-card"></i> Submit
                    Payment
                </button>*@
                                <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;" onClick="cont()">
                                    <i class="fas fa-download"></i> Gerar PDF
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- /.invoice -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
