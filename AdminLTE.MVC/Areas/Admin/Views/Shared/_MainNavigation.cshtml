@using static AdminLTE.MVC.Helpers.NavigationIndicatorHelper;
<aside class="main-sidebar sidebar-light-primary elevation-4">
    <a href="~/Home" class="brand-link">
        
        <span class="brand-text font-weight-light"><br/></span>
    </a>
    <div class="sidebar">
@if (User.Identity.IsAuthenticated)
{
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
            <a href="#" class="d-block">Olá, @User.Identity.Name </a>
        </div>
    </div>
}
else
{
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="info">
            <a href="#" class="d-block">Olá, Administrador</a>
        </div>
    </div>
}
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item ">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Home
                        </p>
                    </a>
                </li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Condominios" asp-action="Index" class="nav-link"> <i class="fas fa-hotel"></i> <p> Condominio</p></a>
                    </li>


                    <li class="nav-item ">
                        <a asp-area="Admin" asp-controller="Blocos" asp-action="Index" class="nav-link"><i class="fas fa-th-large"></i> Bloco</a>
                    </li>



                    <li class="nav-item ">
                        <a asp-area="Admin" asp-controller="Apartamentos" asp-action="Index" class="nav-link">
                            <i class="fas fa-house-user"></i> <p> Apartamento</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a asp-area="Admin" asp-controller="Apartamentos" asp-action="CreateHard" class="nav-link">
                            <i class="fas fa-house-user"></i> <p> Apartamento Hard</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a asp-area="Admin" asp-controller="AguaApartamentos" asp-action="Index" class="nav-link"><i class="fas fa-hand-holding-water"></i> Agua</a>
                    </li>

                    <li class="nav-item ">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="ListUser" class="nav-link"><i class="fas fa-users"></i> Usuários</a>
                    </li>
                }
                else
                {
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Estados" class="nav-link @Url.MakeActiveClass("home","Estados")">
                            <i class="nav-icon fas fa-map-marker"></i>
                            <p>
                                Estados
                            </p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Categorias" class="nav-link @Url.MakeActiveClass("home","Categorias")">
                            <i class="nav-icon fas fa-list-alt "></i>
                            <p>
                                Categorias
                            </p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Promoções" class="nav-link @Url.MakeActiveClass("home","Promoções")">
                            <i class="nav-icon fas fa-heart"></i>
                            <p>
                                Promoções
                            </p>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
